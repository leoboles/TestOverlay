<Window x:Class="TestOverlay.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TestOverlay"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight">
    <Grid>
        <StackPanel Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Type the window Title" Margin="10,05"/>
            <TextBox x:Name="txtWindowTitle" MinWidth="150" Margin="10,0,10,10" Text="Untitled - Notepad"/>
            <Button Content="GO!" Margin="10" Click="Button_Click"/>
        </StackPanel>
    </Grid>
</Window>
